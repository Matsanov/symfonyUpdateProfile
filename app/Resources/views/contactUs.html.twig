{% include "header.html.twig" %}

{{ form_start(form) }}

<div class="signin-form">

    <div class="col-md-6">

        <form class="form-signin" action="" method="post">

            <fieldset>

                <div id="legend">

                    <legend class="text-center">Contact us !</legend>

                </div>

                {{ form_errors(form) }}

                <div class="form-group">

                    <label class="control-label" for="subject">Subject</label>

                    <div class="controls">

                        {{ form_widget(form.subject,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>


                <div class="form-group">

                    <label class="control-label" for="name">Name</label>

                    <div class="controls">

                        {{ form_widget(form.name,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>


                <div class="form-group">

                    <label class="control-label" for="email"></label>

                    <div class="controls">


                        <label class="control-label" for="email">Email</label>
                        {{ form_widget(form.email,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>

                <div class="form-group">

                    <div class="controls">


                        <label class="control-label" for="email">Message</label>
                        {{ form_widget(form.message,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>


                <div class="form-group">

                    <!-- Button -->
                    <div class="controls">

                        {{ form_widget(form.save, { 'label': 'Send !' }) }}

                    </div>

                </div>

            </fieldset>

            {{ form_rest(form) }}
        </form>

    </div>

</div>

</div>

{{ form_end(form) }}

{% include "footer.html.twig" %}