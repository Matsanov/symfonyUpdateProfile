{% include "header.html.twig" %}

<div class="signin-form">

    <div class="container col-md-6">

        <h2 class="form-signin-heading text-center">Welcome to Pictures ! Please Login to continue !</h2>
        <hr/>

        {% if error %}
            {{ error.message }}
        {% endif %}

        <form class="form-signin" action="{{ path('login_user') }}" method="post" id="login-form">

            <div class="form-group">
                <label>Username:</label>
                <input type="text" class="form-control" placeholder="Username" name="_username" value="{{ lastUsername }}" id="username"/>
                <span id="check-e"></span>
            </div>

            <div class="form-group">
                <label>Password:</label>
                <input type="password" class="form-control" placeholder="Password" name="_password" id="password"/>
            </div>

            <hr/>

            <div class="form-group">
                <button type="submit" class="btn btn-default" name="btn-login" id="btn-login">
                    <span class="glyphicon glyphicon-log-in"></span> &nbsp; Sign In
                </button>
            </div>

        </form>

    </div>

</div>



