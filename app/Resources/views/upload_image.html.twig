{% include "header.html.twig" %}

{{ form_start(form) }}

<div class="signin-form">

    <div class="col-md-6">

        <form class="form-signin" action="{{ path('image_upload') }}" method="post">

            <fieldset>

                <div id="legend">

                    <legend class="text-center">Upload photo !</legend>

                </div>

                {{ form_errors(form) }}

                <div class="form-group">

                    <!-- Username -->

                    <label class="control-label" for="username">Title:</label>

                    <div class="controls">

                        {{ form_widget(form.title,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>


                <div class="form-group">
                    <!-- E-mail -->

                    <label class="control-label" for="email">Description:</label>

                    <div class="controls">

                        {{ form_widget(form.description,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>


                <div class="form-group">

                    <div class="controls">

                        <label class="control-label" >Choose photo:</label>
                        {{ form_widget(form.image,{'attr': {'novalidate': 'novalidate'}}) }}

                    </div>

                </div>


                <div class="form-group">

                    <!-- Button -->
                    <div class="controls">

                        {{ form_widget(form.save, { 'label': 'Upload' }) }}

                    </div>

                </div>

            </fieldset>

            {{ form_rest(form) }}
        </form>

    </div>

</div>

</div>

{{ form_end(form) }}

{% include "footer.html.twig" %}
